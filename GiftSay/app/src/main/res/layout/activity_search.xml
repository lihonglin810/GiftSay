<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7e7e7"
        android:padding="5dp"
        >
        <LinearLayout
            android:id="@+id/aty_search_title_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_title_shape"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_search_grey"/>
            <EditText
                android:id="@+id/aty_search_et"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:hint=" 选份走心好礼送给Ta"
                android:background="@drawable/home_title_shape"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/search_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:text="取消"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@mipmap/icon_start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="大家都在搜"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/aty_search_rv"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="140dp"/>

    <TextView
        android:id="@+id/aty_search_show_view_tv"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dfdfdf"/>
    <RelativeLayout
        android:id="@+id/search_db_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <ImageView
            android:id="@+id/aty_search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@mipmap/icon_search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/aty_search_img"
            android:layout_margin="2dp"
            android:text="我搜过的"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_delete_all"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>