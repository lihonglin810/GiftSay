<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_gift_cover_image"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/icon" />

        <TextView
            android:id="@+id/short_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_gift_cover_image"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:text="随时随地的温暖" />

        <TextView
            android:id="@+id/item_gift_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_description_tv"
            android:layout_margin="5dp"
            android:textSize="11sp"
            android:text="tanana·不锈钢保温桶" />

        <TextView
            android:id="@+id/item_gift_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_gift_name_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="129.00"
            android:textSize="12sp"
            android:textColor="#ff1466" />
    </RelativeLayout>
</android.support.v7.widget.CardView>